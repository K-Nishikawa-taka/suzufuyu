<!DOCTYPE html>
<html>
  <head>
    <title>Suzufuyu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if admiral_signed_in? %>
      <li>
        <%= link_to "投稿フォーム", new_ship_image_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admiral_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_admiral_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_admiral_session_path %>
      </li>
    <% end %>

    <%= yield %>

  </body>
</html>
